{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,  // Habilita todas as verificações de tipo rigorosas
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",  // Certifique-se de que arquivos .d.ts estão incluídos
    "env.d.ts",  // Inclua seu arquivo de declaração de tipos
    "src/**/*.vue" // Certifique-se de que arquivos .vue estão incluídos para suporte a Vue
  ],
  "exclude": [
    "node_modules"
  ]
}
